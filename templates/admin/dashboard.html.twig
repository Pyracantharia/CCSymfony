{% extends 'index.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block main_content %}
    <h1>Admin Dashboard</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    {# <td>{{ article.author.firstName }} {{ article.author.lastName }}</td> #}
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info">View</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('admin_article_delete', {'id': article.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

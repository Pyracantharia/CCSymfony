{% extends 'index.html.twig' %}

{% block title %}Articles{% endblock %}

{% block main_content %}
    <h1>All Articles</h1>

    <div class="my-4">
        <a href="{{ path('app_article_create') }}" class="btn btn-primary">Create New Article</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.author.firstName }} {{ article.author.lastName }}</td>
                    <td>{{ article.publishedAt ? article.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info">View</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No articles found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
